<h1>Candidates</h1>

<table cellpadding="0" cellspacing="0">
  <thead>
  <tr>
    <th>Title</th>
    <th>Votes</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @topics.each do |topic| %>
  <tr>
    <td><%= link_to topic.title, topic %></td>
    <td><%= pluralize(topic.votes.length, "vote")%></td>
    <td><%= button_to '+1', votes_path(topic_id: topic.id), method: :post %></td>
    <td><%= link_to 'Eliminate', topic, method: :delete, data: { confirm: 'Eliminate this candidate in favor of the correct candidate (Megatron)?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Topic', new_topic_path %>
